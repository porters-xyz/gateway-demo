{
  "name": "gateway-mono",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "prisma": {
    "schema": "services/postgres/schema.prisma"
  },
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "build": "pnpm run --parallel build",
    "start": "pnpm run --parallel start",
    "setup:prisma": "npx prisma generate",
    "migrate": "npx prisma migrate dev",
    "build:docs": "pnpm --filter ./docs build",
    "serve:docs": "pnpm --filter ./docs start",
    "build:frontend": "pnpm --filter ./web-portal/frontend build",
    "serve:frontend": "pnpm --filter ./web-portal/frontend start",
    "build:backend": "pnpm --filter ./web-portal/backend build",
    "serve:backend": "pnpm --filter ./web-portal/backend start:prod"
  },
  "dependencies": {
    "@prisma/client": "^5.8.1"
  },
  "devDependencies": {
    "prisma": "^5.8.1"
